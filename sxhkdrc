# rofi
alt + l
    rofi options -theme mine -show drun -show-icons
alt + shift + l
    rofi options -theme mine -show run -show-icons
    # rofi options -theme mine -show window -show-icons
ctrl + alt + shift + l
    rofi options -theme mine -show ssh -show-icons

super + {_,shift + }{1,2,3,4,5}
	bspc {desktop -f,node -d} '^{1,2,3,4,5}'

alt + {_,shift + }{1,2,3,4,5}
	bspc {desktop -f,node -d} '^{6,7,8,9,10}'

ctrl + {_,shift + }{1,2,3,4,5}
	bspc {desktop -f,node -d} '^{11,12,13,14,15}'

